SELECT
movimentacoes.id AS Registro,
colaboradores.nome AS Funcionario,
aparelhos.modelo AS Equipamento,
aparelhos.imei AS IMEI,
movimentacoes.tipo_movimentação AS Operacao,
movimentacoes.data_movimentacaO AS DATA
FROM movimentacoes
JOIN colaboradores ON movimentacoes.colaborador_id = colaboradores.id
JOIN aparelhos ON movimentacoes.aparelho_id = aparelhos.id


UPDATE aparelhos 
SET status = 'Manutencao'
